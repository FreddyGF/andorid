<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimarybtn"/>
            <corners android:radius="20dp"/> <!-- Ajusta el radio para bordes redondeados -->
        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimarybtn"/> <!-- Cambia esto al color del borde que prefieras -->
            <corners android:radius="20dp"/> <!-- Ajusta el radio para bordes redondeados -->
        </shape>
    </item>
</layer-list>
